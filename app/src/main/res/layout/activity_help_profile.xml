<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".profile.HelpProfile">


    <ImageView
        android:id="@+id/iv_logo_help_first"
        android:layout_width="190dp"
        android:layout_height="83dp"
        android:layout_marginStart="108dp"
        android:layout_marginTop="28dp"
        android:background="@drawable/cine_logo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="24dp"
        android:gravity="center"
        android:text="Tem alguma dúvida ou sugestão?"
        android:textColor="#938F8F"
        android:textSize="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cardView" />

    <EditText
        android:id="@+id/et_write_message"
        android:layout_width="371dp"
        android:layout_height="102dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="36dp"
        android:ems="10"
        android:gravity="top"
        android:hint="Digite sua Mensagem Aqui..."
        android:inputType="textPersonName"
        android:textColor="#938F8F"
        android:textColorHint="@color/white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <EditText
        android:id="@+id/et_write_email"
        android:layout_width="371dp"
        android:layout_height="50dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="148dp"
        android:ems="10"
        android:gravity="top"
        android:hint="Coloque seu email aqui!"
        android:textColorHint="@color/white"
        android:inputType="textEmailAddress"
        android:textColor="#938F8F"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <Button
        android:id="@+id/bt_send"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="160dp"
        android:layout_marginTop="40dp"
        android:backgroundTint="#7E7575"
        android:text="Enviar"
        android:textColor="@color/white"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_write_email" />

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="138dp"
        android:layout_height="141dp"
        android:layout_marginStart="136dp"
        android:layout_marginTop="36dp"
        app:cardCornerRadius="70dp"
        android:backgroundTint="#E8DCDC"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/iv_logo_help_first">



    </androidx.cardview.widget.CardView>


</androidx.constraintlayout.widget.ConstraintLayout>